{
  "name": "definition-stack",
  "displayName": "Definition Stack",
  "description": "Show definitions recursively in one tab.",
  "publisher": "mark-hahn",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/mark-hahn/vscode-definition-stack"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "definition-stack.openwebview",
        "title": "Definition Stack: Open"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "definition-stack.openwebview",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "definition-stack.openwebview"
        }
      ]
    },
    "keybindings": [
      {
        "command": "definition-stack.openwebview",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d"
      }
    ],
    "configuration": {
      "title": "Definition Stack Settings",
      "properties": {
        "definition-stack.favoriteQuote": {
          "type": "string",
          "default": "To be or not to be",
          "description": "Enter your favorite quote."
        },
        "definition-stack.enableFeature": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the feature."
        },
        "definition-stack.theme": {
          "type": "string",
          "default": "light",
          "enum": [
            "light",
            "dark",
            "auto"
          ],
          "description": "Choose the theme for the extension."
        },
        "definition-stack.refreshInterval": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "Set the refresh interval in seconds."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "eslint-plugin-promise": "^7.2.1"
  },
  "dependencies": {
    "prismjs": "^1.29.0",
    "reserved-words": "^0.1.2"
  }
}
