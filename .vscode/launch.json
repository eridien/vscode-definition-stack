{
	"version": "0.2.0",
	"configurations": [
  {
    "name": "prism-language-names",
    "program": "${workspaceFolder}/get-prism-language-names.js",
    "request": "launch",
    "skipFiles": [
      "<node_internals>/**"
    ],
    "type": "node"
  },
  
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--folder-uri=c:/Users/mark/apps/test-app"
      ]
		}
	]
}
